{
  "name": "socialflyn",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered social media agency platform",
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/backend\" \"npm run dev --workspace=apps/frontend\"",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace=apps/backend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "db:migrate": "npm run db:migrate --workspace=apps/backend",
    "db:seed": "npm run db:seed --workspace=apps/backend"
  },
  "workspaces": [
    "apps/backend",
    "apps/frontend",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "npm@10.0.0"
}
